<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false" backupStaticAttributes="false">
	<testsuites>
		<testsuite name="Nella Framework Test Suite">
			<directory>./tests/</directory>
		</testsuite>
	</testsuites>
	
	<filter>
	  <whitelist>
	    <directory suffix=".php">./src/Nella</directory>
	  </whitelist>
	</filter>
	
	<logging>
		<log type="coverage-html" target="build/coverage" title="Nella Framework"
			charset="UTF-8" yui="true" highlight="true"
			lowUpperBound="35" highLowerBound="70"/>
		<log type="coverage-clover" target="build/logs/clover.xml"/>
		<log type="junit" target="build/logs/junit.xml" logIncompleteSkipped="false"/>
	</logging>
</phpunit>
